							+ "AND a.UserID = d.User_id AND a.STATUS = 'P' AND a.DISTRIBUTEDSTATUS = 'PENDING' "
							+ "AND a.FAULT_ID='"+faultId+"'";
			
			
			
			System.out.println(" The final query of statusRequest==="+longQuery);
			String query = "SELECT FAULT_ID, CREATE_DATE AS APPROVAL_DATE,"
					+ "RIGHT(CONVERT(VARCHAR, CREATE_DATETIME, 120), 9) "
					+ " AS APPROVAL_TIME FROM ST_INVENTORY_RFID_APPROVED " + whereClause;
			Statement statment = conn.createStatement();
			ResultSet resultSet = statment.executeQuery(longQuery);
			
			
			    while(resultSet.next()) {
					JSONObject requisition = new JSONObject();
					requisition.put("FAULT_ID",
							(resultSet.getString(1) == null ? "XX" : resultSet.getString(1)));
					requisition.put("RequestedBY", resultSet.getString(2));
					requisition.put("TRANS_DATE", resultSet.getString(3));
					requisition.put("Approvalstatus", resultSet.getString(4));
					requisition.put("Collector", resultSet.getString(5));
					requisition.put("Approval", resultSet.getString(6));
					requisition.put("Quantity", resultSet.getString(7));
					requisition.put("REMARKS", resultSet.getString(8));
					//requisition.put("REMARKS", resultSet.getString(9));
					
					System.out.println("response==" + response);
					response.put(requisition);
				//}
			    }
			
			//ArrayList list = new ArrayList();
//			while (resultSet.next()) {
//				JSONObject requisition = new JSONObject();
//				requisition.put("FAULT_ID",
//						(resultSet.getString(1) == null ? "XX" : resultSet.getString(1)));
//				requisition.put("RequestedBY", resultSet.getString(2));
//				requisition.put("TRANS_DATE", resultSet.getString(3));
//				requisition.put("Approvalstatus", resultSet.getString(4));
//				requisition.put("Collector", resultSet.getString(5));
