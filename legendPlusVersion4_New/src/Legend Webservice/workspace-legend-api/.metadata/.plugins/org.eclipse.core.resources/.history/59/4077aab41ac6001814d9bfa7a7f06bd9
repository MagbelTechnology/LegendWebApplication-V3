	@POST
	@Path("/insertReq")
	@Produces(MediaType.APPLICATION_JSON)
	@Consumes(MediaType.APPLICATION_JSON)
	public String insertRequisition(String requisition) {
		final JSONObject jsonObject = new JSONObject(requisition);
		String insertQuery = "INSERT INTO am_ad_Requisition (ReqnID,UserID,ReqnBranch,ReqnSection,ReqnDepartment,ReqnDate,"
				+ "ReqnUserID,ItemType,ItemRequested,Status,ApprovalLevel,ApprovalLevelLimit,Supervisor,Company_Code,"
				+ "Image,Remark,workStationIP,Quantity,distributedstatus,distributedQty,projectCode,Category,"
				+ "ReqnType,MEASURING_CODE,RETURNED_STOCK,RETURNEDCATEGORY,RETURNED_ORDERNO,FAULT_ID) "
				+ "VALUES (?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
		try {
			getDbConnection();
			PreparedStatement stmt = conn.prepareStatement(insertQuery);
			stmt.setObject(1, jsonObject.get("ReqnID"));
			stmt.setObject(2, jsonObject.get("UserID"));
			stmt.setObject(3, jsonObject.get("ReqnBranch"));
			stmt.setObject(4, jsonObject.get("ReqnSection"));
			stmt.setObject(5, jsonObject.get("ReqnDepartment"));
			stmt.setObject(6, jsonObject.get("ReqnDate"));
			stmt.setObject(7, jsonObject.get("ReqnUserID"));
			stmt.setObject(8, jsonObject.get("ItemType"));
			stmt.setObject(9, jsonObject.get("ItemRequested"));
			stmt.setObject(10, jsonObject.get("Status"));
			stmt.setObject(11, jsonObject.get("ApprovalLevel"));
			stmt.setObject(12, jsonObject.get("ApprovalLevelLimit"));
			stmt.setObject(13, jsonObject.get("Supervisor"));
			stmt.setObject(14, jsonObject.get("Company_Code"));
			stmt.setObject(15, jsonObject.get("Image"));
			stmt.setObject(16, jsonObject.get("Remark"));
			stmt.setObject(17, jsonObject.get("workStationIP"));
			stmt.setObject(18, jsonObject.get("Quantity"));
			stmt.setObject(19, jsonObject.get("distributedstatus"));
			stmt.setObject(20, jsonObject.get("distributedQty"));
			stmt.setObject(21, jsonObject.get("projectCode"));
			stmt.setObject(22, jsonObject.get("Category"));
			stmt.setObject(23, jsonObject.get("ReqnType"));
			stmt.setObject(24, jsonObject.get("MEASURING_CODE"));
			stmt.setObject(25, jsonObject.get("RETURNED_STOCK"));
			stmt.setObject(26, jsonObject.get("RETURNEDCATEGORY"));
			stmt.setObject(27, jsonObject.get("RETURNED_ORDERNO"));
			stmt.setObject(28, jsonObject.get("FAULT_ID"));

			int insert = stmt.executeUpdate();
			System.out.println(" inserted Records Here ===" + insert);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		final JSONObject result = new JSONObject();
		result.put("sucess", true);
		result.put("Message", "Company added Successfully");
		return requisition.toString();
	}

	@POST
	@Path("/save")
	@Produces(MediaType.APPLICATION_JSON)
	@Consumes(MediaType.APPLICATION_JSON)
	public String save(String requisition, @HeaderParam("authorization") String authString) {
		
		/*			Remainining:
		(1). ReqnID*

		*/
        if(!isUserAuthenticated(authString)){
            return "{\"error\":\"User not authenticated\"}";
        }		
		final JSONObject jsonObject = new JSONObject(requisition);
		final JSONObject response = new JSONObject();
		System.out.println(" Saving this requisition=="+requisition);
		String insertQuery = "insert into am_ad_Requisition (ReqnID,UserID,ReqnBranch,ReqnSection,ReqnDepartment," + 
				"ItemType,ItemRequested,Status,Supervisor,company_code,Remark,Quantity," + 
				"projectCode,ReqnDate,returnedCategory,MEASURING_CODE,ReqnUserID,"
				+ "distributedQty,ReqnType,FAULT_ID,APP_ID,distributedstatus,Category)" + 
				" values (?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
		
		String approvalQuery = "INSERT INTO ST_TRANSACTION_APPROVAL (MTID,TRANS_CODE,DESCRIPTION,USERID,APPROVE_OFFICER,"+
				"TRANS_DATE,STATUS,MAX_APPROVE_LEVEL,CONCURRENCE,ITEM_CODE,QUANTITY,REASON,COMPANY_CODE)" + 
				" VALUES (?,?,?,?,?,?,?,?,?,?,?,?,?)";		
		
		String assetApprovalQuery = "insert into am_asset_approval(asset_id,user_id,super_id,posting_date,"
				+ "description,effective_date,branchCode,asset_status,tran_type, process_status,tran_sent_time," + 
				"transaction_id,batch_id,transaction_level) values(?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
		String faultId=String.valueOf(jsonObject.opt("Fault_ID"));
		
		System.out.println("1 faultId=="+faultId);
		
		if(jsonObject.opt("Fault_ID")==null) {
			response.put("ResponseCode", "03");
			response.put("ResponseMessage", "Invalid JSON (Fault_ID is Compulsory)");
			return response.toString();
		}
		
		try {
			getDbConnection();
			String companyCode = "",measurement = "";
			
			
			//String user = StringUtils.substringBetween(jsonObject.getString("user"), "(", ")");
			String user = jsonObject.getString("user");
			//String ID = StringUtils.substringBetween(jsonObject.getString("ID"), "(", ")");
			String ID = jsonObject.getString("ID");
			//String superUser = jsonObject.getString("super_user");
			
			//String user =StringUtils.substringBetween(String.valueOf(jsonObject.getString("user")), "(", ")");
			
			//String bu = StringUtils.substringBetween(jsonObject.getString("bu"), "(", ")");
			String bu = jsonObject.getString("bu");
			//String section= StringUtils.substringBetween(jsonObject.getString("section"), "(", ")");
			String section= jsonObject.getString("section");
			//String department=StringUtils.substringBetween(jsonObject.getString("department"), "(", ")");
			String department=jsonObject.getString("department");
			//String itemType=StringUtils.substringBetween(jsonObject.getString("itemType"), "(", ")");
			String itemType=jsonObject.getString("itemType");
			
			
/*			String[] codes = StringUtils.substringsBetween(jsonObject.getString("item"), "(", ")");
			int length= codes.length;
			String code="";
			if(length>0)
				code = codes[length-1];
			else
				code=StringUtils.substringBetween(jsonObject.getString("item"), "(", ")");*/
			String code=jsonObject.getString("item");
			System.out.println(" Code ==="+code);
			//String supervisor=StringUtils.substringBetween(jsonObject.getString("supervisor"), "(", ")");
			String supervisor=jsonObject.getString("supervisor");
			
			//String collectedBy=StringUtils.substringBetween(jsonObject.getString("Collected By"), "(", ")");
			String collectedBy=jsonObject.getString("Collected By");
			System.out.println(" Collected By==="+collectedBy);
			Object quantity=jsonObject.get("quantity");
			//String project=StringUtils.substringBetween(jsonObject.getString("project"), "(", ")");
			String project=jsonObject.getString("project");
			//String category =StringUtils.substringBetween(String.valueOf(jsonObject.getString("category")), "(", ")");
			String category =jsonObject.getString("category");
			String query = "SELECT COMPANY_CODE FROM am_gb_company";
			

			
			
			Statement statment = conn.createStatement();
			System.out.println(" Query sent==" + query);
			ResultSet resultSet = statment.executeQuery(query);
			while (resultSet.next()) {
				companyCode = resultSet.getString(1);
			}
			query = "SELECT START_NO FROM ST_MODULES_CODES WHERE MODULE_NAME = 'REQUISITION'"; 
			long maxId=0l;
			resultSet = statment.executeQuery(query);
			while (resultSet.next()) {
				maxId = resultSet.getLong(1);
			}	
			maxId=maxId+1;
			query = "SELECT MT_ID + 1 FROM IA_MTID_TABLE WHERE MT_TABLENAME = 'ST_TRANSACTION_APPROVAL'"; 
			long MT_ID=0l;
			resultSet = statment.executeQuery(query);
			while (resultSet.next()) {
				MT_ID = resultSet.getLong(1);
			}		
			query = "SELECT MT_ID + 1 FROM IA_MTID_TABLE WHERE MT_TABLENAME='am_asset_approval'"; 
			long assetMT_ID=0l;
			resultSet = statment.executeQuery(query);
			while (resultSet.next()) {
				assetMT_ID = resultSet.getLong(1);
			}			
			String duplicateFaultId="SELECT FAULT_ID FROM am_ad_Requisition WHERE FAULT_ID='"+faultId+"'";
			
			System.out.println(" duplicateFaultId==" + duplicateFaultId);
			resultSet = statment.executeQuery(duplicateFaultId);
			if (resultSet.next()) {
				response.put("ResponseCode", "04");
				response.put("ResponseMessage", "Duplicate Fault Id not Allowed ");
				return response.toString();
			}			
			
			
			System.out.println(" MT_ID==" + MT_ID);
			System.out.println(" 2user==" + user);
			String userQuery="SELECT USER_ID,USER_NAME FROM am_gb_User where USER_ID='"+user+"'";
			
			System.out.println(" userQuery==" + userQuery);
			resultSet = statment.executeQuery(userQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (User is Empty or not Valid)");
				return response.toString();
			}		
			
			
		
			String collectedByQuery="SELECT USER_NAME FROM ST_INVENTORY_USERS WHERE user_code='"+collectedBy+"'";
			
			System.out.println(" collectedByQuery=="+collectedByQuery);
			
			resultSet = statment.executeQuery(collectedByQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (Collected By is Empty or not Valid)");
				return response.toString();
			}				
			String categoryQuery="SELECT category_code FROM  am_ad_category WHERE category_code ='"+category+"'";
			resultSet = statment.executeQuery(categoryQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (Category is Empty or not Valid)");
				return response.toString();
			}
			String itemTypeQuery="SELECT NAME FROM ST_ITEMTYPE WHERE ITEMTYPE_CODE = '"+itemType+"'";
			resultSet = statment.executeQuery(itemTypeQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (Item Type is Empty or not Valid)");
				return response.toString();
			}			
			
			String itemQuery="SELECT DESCRIPTION FROM  ST_INVENTORY_ITEMS  WHERE ITEM_CODE='"+code+"'";
			
			resultSet = statment.executeQuery(itemQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (Item is Empty or not Valid)");
				return response.toString();
			}				
			String buQuery="SELECT BRANCH_NAME FROM am_ad_branch WHERE BRANCH_ID="+bu;
			resultSet = statment.executeQuery(buQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (BU is Empty or not Valid)");
				return response.toString();
			}				
			String supervisorQuery="SELECT Full_Name FROM am_gb_User WHERE User_id="+supervisor;
			System.out.println(" supervisorQuery=="+supervisorQuery);
			resultSet = statment.executeQuery(supervisorQuery);
			if (!resultSet.next()) {
				response.put("ResponseCode", "03");
				response.put("ResponseMessage", "Invalid JSON (Supervisor is Empty or not Valid)");
				return response.toString();
			}				
			
			query = "UPDATE ST_MODULES_CODES SET START_NO="+maxId+" WHERE MODULE_NAME = 'REQUISITION'"; 
			System.out.println(" Query to update ST MODULE=="+query);
			Statement updateSt=conn.createStatement();
			int rowAffected = updateSt.executeUpdate(query);
			System.out.println("1 rowAffected==" + rowAffected);
			
			
			query = "UPDATE IA_MTID_TABLE SET MT_ID = MT_ID + 1 WHERE MT_TABLENAME = 'ST_TRANSACTION_APPROVAL'"; 
			System.out.println(" Query to update ST IA_MTID_TABLE=="+query);
			updateSt=conn.createStatement();
			rowAffected = updateSt.executeUpdate(query);
			System.out.println("2 rowAffected==" + rowAffected);			

			query = "UPDATE IA_MTID_TABLE SET MT_ID = MT_ID + 1 WHERE MT_TABLENAME = 'am_asset_approval'"; 
			System.out.println(" Query to update ST IA_MTID_TABLE=="+query);
			updateSt=conn.createStatement();
			rowAffected = updateSt.executeUpdate(query);
			System.out.println("3 rowAffected==" + rowAffected);			
						
			PreparedStatement stmt = conn.prepareStatement(insertQuery);
			
			String reqnID="REQN/"+maxId;
			
			stmt.setString(1,reqnID);
			System.out.println(" reqnID=="+reqnID);
			stmt.setObject(2, user );
			System.out.println(" user=="+user);
			stmt.setObject(3, bu);
			System.out.println(" bu=="+bu);
			stmt.setObject(4, section);
			System.out.println(" section=="+section);
			stmt.setObject(5, department);
			System.out.println(" department=="+department);
			stmt.setObject(6,itemType );
			System.out.println(" itemType=="+itemType);

			stmt.setObject(7, code);
			System.out.println(" code=="+code);
			stmt.setObject(8, "A");
			
			System.out.println(" supervisor=="+supervisor);
			stmt.setObject(9, supervisor);
			stmt.setObject(10, companyCode);
			System.out.println(" companyCode=="+companyCode);
			String remark = jsonObject.getString("remark");
			stmt.setObject(11, remark);
			
			System.out.println(" remark=="+remark);
			stmt.setObject(12,quantity );
			System.out.println(" quantity=="+quantity);
			stmt.setObject(13,project );
			System.out.println(" project=="+project);
			stmt.setDate(14,new java.sql.Date(System.currentTimeMillis()));
			stmt.setObject(15,"N/A" );
			System.out.println(" category=="+category);
			stmt.setObject(16, measurement);
			System.out.println(" measurement=="+measurement);
			stmt.setObject(17,  collectedBy);
			System.out.println(" collectedBy=="+collectedBy);
			stmt.setObject(18, quantity);
			stmt.setObject(19, "1");
			stmt.setObject(20, faultId);
			
			System.out.println(" ID=="+ID);
			stmt.setObject(21, ID);
			stmt.setObject(22, "Pending");
			stmt.setObject(23, category);
			System.out.println(" faultId=="+faultId);
			System.out.println(" The first insertion here...");
			int insert = stmt.executeUpdate();
			System.out.println(" insert=="+insert);
			
			PreparedStatement approveStmt = conn.prepareStatement(approvalQuery);
			approveStmt.setObject(1,MT_ID);
			approveStmt.setString(2,reqnID);
			approveStmt.setObject(3,  "REQUISITION");
			//if(jsonObject.)
			approveStmt.setObject(4, jsonObject.opt("userName"));
			approveStmt.setObject(5, supervisor);//User Who sent the transaction
			//approveStmt.setObject(5, StringUtils.substringBetween(jsonObject.getString("supervisor"), "(", ")"));
			approveStmt.setDate(6, new java.sql.Date(System.currentTimeMillis()));
			approveStmt.setObject(7, "A");
			approveStmt.setObject(8, 1);
			approveStmt.setObject(9, 0);
			approveStmt.setObject(10, itemType);
			approveStmt.setObject(11, 0);
			approveStmt.setObject(12, jsonObject.opt("remark"));
			approveStmt.setObject(13, companyCode);
			int approveInsert = approveStmt.executeUpdate();
			System.out.println(" approveInsert=="+approveInsert);
			
			PreparedStatement assetStmt = conn.prepareStatement(assetApprovalQuery);
			//assetStmt.setObject(1,ID);
			assetStmt.setObject(1,reqnID);
			assetStmt.setString(2,user);
			assetStmt.setObject(3,  supervisor);
			//if(jsonObject.)
			java.sql.Date da = new java.sql.Date(System.currentTimeMillis());
			
			System.out.println(" The Posting Date ==="+da);
			
			assetStmt.setDate(4,da );
			assetStmt.setObject(5, "Remark");//User Who sent the transaction
			//approveStmt.setObject(5, StringUtils.substringBetween(jsonObject.getString("supervisor"), "(", ")"));
			assetStmt.setDate(6, new java.sql.Date(System.currentTimeMillis()));
			assetStmt.setObject(7, bu);
			assetStmt.setObject(8, "ACTIVE");
			assetStmt.setObject(9, "Requisition");
			assetStmt.setObject(10, "P");
			assetStmt.setObject(11, null);
			assetStmt.setObject(12,assetMT_ID);
			assetStmt.setObject(13, assetMT_ID);
			assetStmt.setObject(14, 1);
			System.out.println(" about to insert assetApprovalQuery="+assetApprovalQuery);
			int assetInsert = assetStmt.executeUpdate();
			System.out.println(" assetInsert=="+assetInsert);
			
			response.put("ResponseCode", "00");
			response.put("ResponseMessage", "Requisition Successfully Saved");
			System.out.println(" inserted Records Here ===" + insert);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			
			if(e instanceof DataTruncation) {
				DataTruncation error = (DataTruncation) e;
				System.out.println(" The Size=="+error.getDataSize()+"  but sent this=="+error.getTransferSize());
			}
			response.put("ResponseCode", "02");
			response.put("ResponseMessage", "Server Error("+e.getMessage()+")-Check The Sample JSON to Confirm!");
			e.printStackTrace();
		}

		return response.toString();
	}
	@GET
	@Path("/items")
	@Produces({ "text/plain" })
	public String getItems(@QueryParam("itemType") String itemType) {

		JSONObject itemsJSON = new JSONObject();
		try {
			
			getDbConnection();

			String itemType_ = StringUtils.substringBetween(itemType, "(", ")");
			String query = "SELECT ITEM_CODE,DESCRIPTION "
					+ "FROM ST_INVENTORY_ITEMS WHERE ITEMTYPE_CODE='"+itemType_+"'"+" ORDER BY DESCRIPTION";

			System.out.println(" items query "+query);
			itemsJSON.put("item", resultSetToString(query));
		} catch (Exception e) {
			e.printStackTrace();
			// TODO: handle exception
		}

		return itemsJSON.toString();
	}	
}
